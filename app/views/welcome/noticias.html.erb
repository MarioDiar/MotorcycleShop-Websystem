<div class="container-fluid">
	<div class="row">
	<% @noticias.each do |noticia|%>
		<div class="col-xs-12 col-sm-3 left_header">
		</div>
		<div class="col-xs-12 col-sm-9 col-sm-offset-3 right_content">
			<a href="motos">
				<div class="list">
					<div class="col-sm-3 hidden-xs text-center">
						<div class="thumbnail_container">
							<%= image_tag("bajajLogoCuadrado.jpg")%>
						</div>
					</div>
					<div class="col-xs-12 col-sm-9 resumen_articulo">
						<h3 class="titulo_articulo"><%=noticia.title%></h3>
						<p class="resumen_articulo"><%=noticia.brief%></p>
					</div>
				</div>
			</a>
		</div>
	<%end%>
	</div>
</div>